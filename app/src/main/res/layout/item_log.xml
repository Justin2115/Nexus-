<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@color/white"
    android:layout_marginBottom="1dp">

    <TextView
        android:id="@+id/tv_log_time"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="12:00:00"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_log_bed"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="Bed 101"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_log_type"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Command"
        android:textSize="12sp"
        android:textColor="@color/hospital_blue_primary" />

    <TextView
        android:id="@+id/tv_log_details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Patient requested water"
        android:textSize="12sp" />

</LinearLayout>
